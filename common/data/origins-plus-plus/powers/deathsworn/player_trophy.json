				"compare_to":1
				}
			},
			{
			"type":"origins:target_condition",
			"condition":{
				"type":"origins:command",
				"command":"execute unless entity @s[tag=Player_Named_Minion]",
				"comparison":"==",
				"compare_to":1
				}
			},
			{
			"type":"origins:actor_condition",
			"condition":{
				"type":"origins:command",
				"command":"execute if data entity @s SelectedItem.tag.Killer",
				"comparison":"==",
				"compare_to":1
				}
			}
		]
