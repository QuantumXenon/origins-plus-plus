				"command":"tag @s add Crystallize_Actor"
				}
			},
			{
			"type":"origins:target_action",
			"action":{
				"type":"origins:execute_command",
				"command":"function origins-plus-plus:deathsworn/player_trophy"
				}
			}	
		]
	},
	"bientity_condition":{
		"type":"origins:and",
