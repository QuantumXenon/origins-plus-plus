{
    "type": "origins:multiple",
    "name": "Little Trick",
    "description": "Your attack will give a stack, up to 3 times, at 3 stacks, Your next attack deal more damage and set to one stack, it will reset after some times not attacking.",
    "stack": {
        "type": "origins:resource",
        "min": 0,
        "max": 3,
        "hud_render": {
            "should_render": false,
            "sprite_location": "origins:textures/gui/community/spiderkolo/resource_bar_02.png",
            "bar_index": 2
        }
    },
    "cdremove": {
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:execute_command",
                    "command": "/resource change @s origins-plus-plus:blob/dmg_cd -1"
                }
            ]
        }
    },
    "stackreset": {
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:execute_command",
                    "command": "/resource set @s origins-plus-plus:blob/dmg_stack 0"
                }
            ]
        },
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "comparison": "==",
                    "compare_to": 1,
                    "resource": "*:*_cd"
                }
            ]
        }
    },
    "cd": {
        "type": "origins:resource",
        "min": 0,
        "max": 80,
        "hud_render": {
            "should_render": false
        }
    },
    "onhitstack": {
        "type": "origins:self_action_on_hit",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:execute_command",
                    "command": "/resource change @s origins-plus-plus:blob/dmg_stack 1"
                },
                {
                    "type": "origins:execute_command",
                    "command": "/resource set @s origins-plus-plus:blob/dmg_cd 80"
                },
                {
                    "type": "origins:execute_command",
                    "command": "/playsound minecraft:entity.player.attack.strong ambient @a ~ ~ ~ 5 1"
                }
            ]
        },
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "comparison": "!=",
                    "compare_to": 3,
                    "resource": "*:*_stack"
                }
            ]
        },
        "cooldown": 8
    },
    "onhit3stackself": {
        "type": "origins:self_action_on_hit",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:execute_command",
                    "command": "/resource set @s origins-plus-plus:blob/dmg_stack 1"
                },
                {
                    "type": "origins:execute_command",
                    "command": "/playsound minecraft:entity.iron_golem.hurt ambient @a ~ ~ ~ 10 1"
                }
            ]
        },
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "comparison": "==",
                    "compare_to": 3,
                    "resource": "*:*_stack"
                }
            ]
        },
        "cooldown": 8
    },
    "onhit3stackdamage": {
        "type": "origins:modify_damage_dealt",
        "modifier": {
            "operation": "multiply_total",
            "value": 0.5
        },
        "condition": {
            "type": "origins:and",
            "conditions": [
                {
                    "type": "origins:resource",
                    "comparison": "==",
                    "compare_to": 3,
                    "resource": "*:*_stack"
                }
            ]
        }
    }
}