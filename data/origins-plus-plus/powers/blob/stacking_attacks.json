{
	"type":"origins:multiple",
	"stack":{
		"type":"origins:resource",
		"min":0,
		"max":3,
		"hud_render":{
			"should_render":false
		}
	},
	"cooldown_countdown":{
		"type":"origins:action_over_time",
		"interval":1,
		"entity_action":{
			"type":"origins:execute_command",
			"command":"resource change @s origins-plus-plus:blob/stacking_attacks_cooldown -1"
		}
	},
	"reset":{
		"type":"origins:action_over_time",
		"interval":1,
		"entity_action":{
			"type":"origins:execute_command",
			"command":"resource set @s origins-plus-plus:blob/stacking_attacks_stack 0"
		},
		"condition":{
			"type":"origins:resource",
			"comparison":"==",
			"compare_to":1,
			"resource":"*:*_cooldown"
		}
	},
	"cooldown":{
		"type":"origins:resource",
		"min":0,
		"max":80,
		"hud_render":{
			"should_render":false
		}
	},
	"stack_on_hit":{
		"type":"origins:self_action_on_hit",
		"entity_action":{
			"type":"origins:execute_command",
			"command":"function origins-plus-plus:blob/stack"
		},
		"condition":{
			"type":"origins:resource",
			"comparison":"!=",
			"compare_to":3,
			"resource":"*:*_stack"
		},
		"cooldown":8
	},
	"self_action_after_stack":{
		"type":"origins:self_action_on_hit",
		"entity_action":{
			"type":"origins:execute_command",
			"command":"function origins-plus-plus:blob/action_after_stack"
		},
		"condition":{
			"type":"origins:resource",
			"comparison":"==",
			"compare_to":3,
			"resource":"*:*_stack"
		},
		"cooldown":8
	},
	"increase_damage_after_stack":{
		"type":"origins:modify_damage_dealt",
		"modifier":{
			"operation":"multiply_total",
			"value":0.5
		},
		"condition":{
			"type":"origins:resource",
			"comparison":"==",
			"compare_to":3,
			"resource":"*:*_stack"
		}
	}
}