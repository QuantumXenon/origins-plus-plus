{
	"type":"origins:multiple",
	"stack":{
		"type":"origins:resource",
		"min":0,
		"max":3
	},
	"cdremove":{
		"type":"origins:action_over_time",
		"interval":1,
		"entity_action":{
			"type":"origins:execute_command",
			"command":"resource change @s origins-plus-plus:blob/stacking_attacks_cd -1"
		}
	},
	"stackreset":{
		"type":"origins:action_over_time",
		"interval":1,
		"entity_action":{
			"type":"origins:execute_command",
			"command":"resource set @s origins-plus-plus:blob/stacking_attacks_stack 0"
		},
		"condition":{
			"type":"origins:resource",
			"comparison":"==",
			"compare_to":1,
			"resource":"*:*_cd"
		}
	},
	"cd":{
		"type":"origins:resource",
		"min":0,
		"max":80
	},
	"onhitstack":{
		"type":"origins:self_action_on_hit",
		"entity_action":{
			"type":"origins:and",
			"actions":[
				{
					"type":"origins:execute_command",
					"command":"resource change @s origins-plus-plus:blob/stacking_attacks_stack 1"
				},
				{
					"type":"origins:execute_command",
					"command":"resource set @s origins-plus-plus:blob/stacking_attacks_cd 80"
				},
				{
					"type":"origins:execute_command",
					"command":"playsound minecraft:entity.player.attack.strong ambient @a ~ ~ ~ 5 1"
				}
			]
		},
		"condition":{
			"type":"origins:resource",
			"comparison":"!=",
			"compare_to":3,
			"resource":"*:*_stack"
		},
		"cooldown":8
	},
	"onhit3stackself":{
		"type":"origins:self_action_on_hit",
		"entity_action":{
			"type":"origins:and",
			"actions":[
				{
					"type":"origins:execute_command",
					"command":"resource set @s origins-plus-plus:blob/stacking_attacks_stack 1"
				},
				{
					"type":"origins:execute_command",
					"command":"playsound minecraft:entity.iron_golem.hurt ambient @a ~ ~ ~ 10 1"
				}
			]
		},
		"condition":{
			"type":"origins:resource",
			"comparison":"==",
			"compare_to":3,
			"resource":"*:*_stack"
		},
		"cooldown":8
	},
	"onhit3stackdamage":{
		"type":"origins:modify_damage_dealt",
		"modifier":{
			"operation":"multiply_total",
			"value":0.5
		},
		"condition":{
			"type":"origins:resource",
			"comparison":"==",
			"compare_to":3,
			"resource":"*:*_stack"
		}
	}
}