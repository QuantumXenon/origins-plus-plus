{
    "type": "origins:multiple",
    "increase": {
        "type": "origins:action_over_time",
        "interval": 40,
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "origins-plus-plus:golden-golem/health_resource",
            "change": 1
        }
    },
    "decrease": {
        "type": "origins:self_action_when_hit",
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "origins-plus-plus:golden-golem/health_resource",
            "change": -5
        },
        "cooldown": 0,
        "hud_render": {
            "should_render": false
        }
    },
    "unneeded_food": {
        "type": "origins:action_over_time",
        "interval": 30,
        "entity_action": {
            "type": "origins:feed",
            "food": 3,
            "saturation": 0
        }
    },
    "health_increase": {
        "type": "origins:action_over_time",
        "interval": 30,
        "entity_action": {
            "type": "origins:heal",
            "amount": 1
        },
        "condition": {
            "type": "origins:resource",
            "resource": "origins-plus-plus:golden-golem/health_resource",
            "comparison": ">=",
            "compare_to": 18
        }
    },
    "ability": {
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:execute_command",
                    "command": "function origins-plus-plus:golden-golem/reinforce"
                },
                {
                    "type": "origins:change_resource",
                    "resource": "origins-plus-plus:golden-golem/health_resource",
                    "change": -20
                }
            ]
        },
        "condition": {
            "type": "origins:resource",
            "resource": "origins-plus-plus:golden-golem/health_resource",
            "comparison": ">=",
            "compare_to": 20
        },
        "key": {
            "key": "secondary"
        }
    },
    "name": "Golem Power",
    "description": "You have a bar that will heal you if above 20. The max is 50. Getting hit lowers the bar by 5. You have no need to eat. You can spend 20 power to use an ability that give you resistance and slowness."
}