{
    "name": "Piercing Thorns",
    "description": "You're protected by a strange magical aura. When hit, the attacker will get damaged by one heart, this cannot be blocked by any type of armor or shield. You can toggle this ability with your primary key. You're also immune to thorns based damage.",
    "type": "origins:multiple",
    "toggle": {
        "type": "origins:active_self",
        "entity_action": {
            "type": "origins:if_else",
            "condition": {
                "type": "origins:resource",
                "resource": "origins-plus-plus:thornling/thorns_resource",
                "comparison": ">",
                "compare_to": 0
            },
            "if_action": {
                "type": "origins:execute_command",
                "command": "resource set @s origins-plus-plus:thornling/thorns_resource 0"
            },
            "else_action": {
                "type": "origins:execute_command",
                "command": "resource set @s origins-plus-plus:thornling/thorns_resource 1"
            }
        },
        "cooldown": 1,
        "hud_render": {
            "should_render": false
        },
        "key": {
            "key": "key.origins.primary_active"
        }
    },
    "resource": {
        "type": "origins:resource",
        "min": 0,
        "max": 1,
        "start_value": 1,
        "hud_render": {
            "should_render": true,
            "sprite_location": "origins:textures/gui/resource_bar.png",
            "bar_index": 3
        }
    },
    "thornsimmune1": {
        "type": "origins:invulnerability",
        "damage_condition": {
            "type": "origins:name",
            "name": "thorns"
        }
    },
    "thornsdamage": {
        "condition": {
            "type": "origins:resource",
            "resource": "origins-plus-plus:thornling/thorns_resource",
            "comparison": ">",
            "compare_to": 0
        },
        "type": "origins:attacker_action_when_hit",
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:damage",
                    "amount": 2,
                    "source": {
                        "name": "even_more_magic",
                        "bypasses_armor": true,
                        "unblockable": true
                    }
                },
                {
                    "type": "origins:play_sound",
                    "sound": "enchant.thorns.hit",
                    "volume": 1,
                    "pitch": 1
                }
            ]
        },
        "cooldown": 1,
        "hud_render": {
            "should_render": false
        }
    },
    "thornsimmune2": {
        "type": "origins:invulnerability",
        "damage_condition": {
            "type": "origins:name",
            "name": "even_more_magic"
        }
    }
}